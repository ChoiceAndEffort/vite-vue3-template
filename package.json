{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "serve:dev": "vite --mode dev ",
    "serve:sit": "vite --mode sit",
    "serve:uat": "vite --mode uat",
    "serve:prod": "vite --mode prod",
    "build": "vue-tsc && vite build",
    "build:dev": "vite build --mode dev",
    "build:sit": "vite build --mode sit",
    "build:uat": "vite build --mode uat",
    "build:prod": "vite build --mode prod",
    "preview": "vite preview",
    "lint": "eslint --fix --ext .ts,.tsx,.vue src --quiet",
    "prettier": "prettier --write \"./*.{html,vue,ts,tsx,js,json,md}\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "precommit": "git-cz"
  },
  "dependencies": {
    "@hb/hb-services": "latest",
    "axios": "^1.6.8",
    "element-plus": "^2.7.2",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "sass": "^1.77.0",
    "vite-plugin-compression": "^0.5.1",
    "vue": "^3.4.27",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/node": "^20.12.11",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "sharp": "^0.33.3",
    "svgo": "^3.3.2",
    "terser": "^5.31.0",
    "typescript": "^4.9.5",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-element-plus": "^0.8.0",
    "unplugin-vue-components": "^0.27.0",
    "unplugin-vue-define-options": "^1.3.3",
    "vite": "^4.2.1",
    "vite-plugin-cdn-import": "^1.0.1",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^2.2.0",
    "vite-plugin-image-optimizer": "^1.1.7",
    "vue-tsc": "^1.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,jsx,vue}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-config.js"
    }
  }
}
